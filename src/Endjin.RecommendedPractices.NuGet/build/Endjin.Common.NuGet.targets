<Project ToolsVersion="14.0" xmlns="http://schemas.microsoft.com/developer/msbuild/2003">

  <Target Name="_EndjinSetPackageProjectAndReleaseDetails" DependsOnTargets="InitializeSourceControlInformation" BeforeTargets="GenerateNuspec">
    <PropertyGroup>
      <RepositoryUrl Condition="$(RepositoryUrl) == ''">$(PrivateRepositoryUrl)</RepositoryUrl>
      <PackageProjectUrl Condition="$(PackageProjectUrl) == ''">$(RepositoryUrl)</PackageProjectUrl>
      <PackageReleaseNotes Condition="$(PackageReleaseNotes) == ''">See $(RepositoryUrl)/releases/</PackageReleaseNotes>
    </PropertyGroup>
  </Target>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>